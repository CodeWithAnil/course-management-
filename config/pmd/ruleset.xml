<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Basic PMD Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
         https://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Basic and safe PMD rules for starting out</description>

    <!-- Code style and formatting -->
    <rule ref="category/java/codestyle.xml/UnnecessaryConstructor"/>
    <rule ref="category/java/codestyle.xml/FieldDeclarationsShouldBeAtStartOfClass"/>

    <!-- Common mistakes and bugs -->
    <rule ref="category/java/errorprone.xml/EmptyIfStmt"/>
    <rule ref="category/java/errorprone.xml/AvoidNullPointerException"/>

    <!-- Best practices -->
    <rule ref="category/java/bestpractices.xml/UnusedPrivateField"/>
    <rule ref="category/java/bestpractices.xml/AvoidReassigningParameters"/>

</ruleset>
